#!/usr/bin/env bash
# Auto-generated wrapper for claude-notify
# Checks if source is newer than binary and rebuilds if needed

SOURCE="/Users/benbernard/bin/ts/src/claude-notify.ts"
BINARY="/Users/benbernard/bin/ts/dist/claude-notify"
BUILD_SCRIPT="/Users/benbernard/bin/ts/scripts/build.ts"

# Check if source is newer than binary
if [[ "$SOURCE" -nt "$BINARY" ]]; then
  echo "Source changed, rebuilding claude-notify..." >&2
  cd "/Users/benbernard/bin/ts" && bun run "${BUILD_SCRIPT}" --single "claude-notify.ts" >/dev/null 2>&1 || {
    echo "Build failed for claude-notify" >&2
    exit 1
  }
fi

# Execute the binary
exec "${BINARY}" "$@"
