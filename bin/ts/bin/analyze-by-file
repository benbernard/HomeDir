#!/usr/bin/env bash
# Auto-generated wrapper for analyze-by-file
# Checks if source is newer than binary and rebuilds if needed

SOURCE="/Users/benbernard/bin/ts/src/analyze-by-file.ts"
BINARY="/Users/benbernard/bin/ts/dist/analyze-by-file"
BUILD_SCRIPT="/Users/benbernard/bin/ts/scripts/build.ts"

# Check if source is newer than binary
if [[ "$SOURCE" -nt "$BINARY" ]]; then
  echo "Source changed, rebuilding analyze-by-file..." >&2
  cd "/Users/benbernard/bin/ts" && bun run "${BUILD_SCRIPT}" --single "analyze-by-file.ts" >/dev/null 2>&1 || {
    echo "Build failed for analyze-by-file" >&2
    exit 1
  }
fi

# Execute the binary
exec "${BINARY}" "$@"
