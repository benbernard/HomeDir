#!/usr/bin/env bash
# Auto-generated wrapper for converter
# Checks if source is newer than binary and rebuilds if needed

SOURCE="/Users/benbernard/bin/ts/src/converter.ts"
BINARY="/Users/benbernard/bin/ts/dist/converter"
BUILD_SCRIPT="/Users/benbernard/bin/ts/scripts/build.ts"

# Check if source is newer than binary
if [[ "$SOURCE" -nt "$BINARY" ]]; then
  echo "Source changed, rebuilding converter..." >&2
  cd "/Users/benbernard/bin/ts" && bun run "${BUILD_SCRIPT}" --single "converter.ts" >/dev/null 2>&1 || {
    echo "Build failed for converter" >&2
    exit 1
  }
fi

# Execute the binary
exec "${BINARY}" "$@"
