#!/usr/bin/env bash
# Auto-generated wrapper for wt
# Checks if source is newer than binary and rebuilds if needed

SOURCE="/Users/benbernard/bin/ts/src/wt.ts"
BINARY="/Users/benbernard/bin/ts/dist/wt"
BUILD_SCRIPT="/Users/benbernard/bin/ts/scripts/build.ts"

# Check if source is newer than binary
if [[ "$SOURCE" -nt "$BINARY" ]]; then
  echo "Source changed, rebuilding wt..." >&2
  cd "/Users/benbernard/bin/ts" && bun run "${BUILD_SCRIPT}" --single "wt.ts" >/dev/null 2>&1 || {
    echo "Build failed for wt" >&2
    exit 1
  }
fi

# Execute the binary
exec "${BINARY}" "$@"
