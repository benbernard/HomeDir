#!/usr/bin/env bash
# Auto-generated wrapper for ben-scripts
# Checks if source is newer than binary and rebuilds if needed

SOURCE="/Users/benbernard/bin/ts/src/ben-scripts.ts"
BINARY="/Users/benbernard/bin/ts/dist/ben-scripts"
BUILD_SCRIPT="/Users/benbernard/bin/ts/scripts/build.ts"

# Check if source is newer than binary
if [[ "$SOURCE" -nt "$BINARY" ]]; then
  echo "Source changed, rebuilding ben-scripts..." >&2
  cd "/Users/benbernard/bin/ts" && bun run "${BUILD_SCRIPT}" --single "ben-scripts.ts" >/dev/null 2>&1 || {
    echo "Build failed for ben-scripts" >&2
    exit 1
  }
fi

# Execute the binary
exec "${BINARY}" "$@"
